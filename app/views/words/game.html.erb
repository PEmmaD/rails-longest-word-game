<h1>Here is your grid</h1>
<p><%= @grid %></p>
<% start_time = Time.now %>
<form action="/score">
  <label for="question">Enter your word</label>
  <input type="text" id="question" name="word" placeholder="word...">
  <input type="hidden" name="grid" value="<%= @grid.flatten %>">
  <input type="hidden" name="start_time" value="<%= start_time %>">
  <input type="submit" value="Go on!">
</form>

